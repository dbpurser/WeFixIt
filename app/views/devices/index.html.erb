<style>
     .body{
        background-color: grey;
      }

    .header2{
        border-radius: 5px;
        border-color: white;
        background-color: #A67B5B;
        text-align: center;
        color: black;
        margin-bottom: 100px;
        border-style: solid;
        border-width: 2mm;
        padding: 30px 0px;
      }

      .box{
        border: solid;
        border-radius: 5px;
        border-color: white;
        border-width:3mm;
        background-color: #A67B5B;
        margin-left: auto; 
        margin-right: auto;
        padding: 100px;
      }
</style>
<head>
</head>

<body class="body">

<h2 class="header2">Your Devices</h2>

<table class=" box table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Devices</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @devices.each do |device| %>
            <tr>
                <td> <%= device.brand %> <%= device.model %></td>
                <td class="text-nowrap">
                    <%= link_to 'show', nil, class: 'btn btn-dark btn-sm' %>
                    <% if @user.is_admin == true %>
                        <%= link_to 'edit', nil, class: 'btn btn-dark btn-sm' %>
                        <%= link_to 'destroy',nil, class: 'btn btn-dark btn-sm' %>
                    <% end %>
                </td>
            </tr>
        <% end %>
  </tbody>

</table>
<p>
  <%= link_to "New Device", nil, class: "btn btn-dark"%>
</p>

<p>
  <%= link_to 'Home',nil, class: "btn btn-dark" %>
</p>

</body>