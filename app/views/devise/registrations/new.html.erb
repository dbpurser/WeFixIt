<style>

  .header1{
    text-align: center;
    background-color: lightblue;
  }

  .header2{
    text-align: center;
    margin-bottom: 20px;
  }

  input[type=text]:focus {
    border-style: solid;
    border-color: blue;
    background-color: lightblue;
  }
  input[type=email]:focus {
    border-style: solid;
    border-color: blue;
    background-color: lightblue;
  }

  input[type=password]:focus {
    border-style: solid;
    border-color: blue;
    background-color: lightblue;
  }

  .boxes{
    margin-left: auto;
    margin-right: auto;
    border-collapse: separate;
    border-spacing: 50px 0;
  }

  .passwords{
    margin-left: auto;
    margin-right: auto;
    border-collapse: separate;
    border-spacing: 50px 0;
  }

  .submit{
    text-align: center;
  }


</style>


<h2 class="header2">Sign up</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  

  
  <table class="boxes">
    <tr>
      <th>
        <div class="field">
          <%= f.text_field :first_name, autofocus: true %><br />
          <%= f.label :first_name %>
        </div>
      </th>
      <th>
        <div class="field">
          <%= f.text_field :last_name, autofocus: true %><br />
          <%= f.label :last_name %>
        </div>
      </th>
    </tr>
  </table>



  <div class="field">
    <table class="boxes">
      <tr>
        <th>
          <%= f.text_field :address, autofocus: true %><br />
          <%= f.label :address %>
        </th>
        <th>
          <%= f.text_field :zip_code, autofocus: true %><br />
          <%= f.label :zip_code %>
        </th>
      </tr>
    </table>
  </div>

  <div class="field">
    <table class="boxes">
      <tr>
        <th>
          <%= f.text_field :state, autofocus: true %><br />
          <%= f.label :state %>
        </th>
        <th>
          <%= f.text_field :city, autofocus: true %><br />
          <%= f.label :city %>
        </th>
      </tr>
    </table>
  </div>

  <div class="field">
    <table class="boxes">
      <tr>
        <th>
          <%= f.text_field :phone_number, autofocus: true %><br />
          <%= f.label :phone_number %>
        </th>
        <th>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br />
          <%= f.label :email %>
        </th>
      </tr>
    </table>
  </div>


  <div class="field">
    <table class="passwords">
      <tr>
        <th>
          <%= f.password_field :password, autocomplete: "new-password" %><br />
          <%= f.label :password %>
        </th>
        <th>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br />
          <%= f.label :password_confirmation %>
        </th>
      </tr>
    </table>
  </div>

  <div class="actions">
    <div class="submit">
      <%= f.submit "Sign up" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
