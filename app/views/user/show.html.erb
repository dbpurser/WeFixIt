</style>
<body class = "body">
    <% if user_signed_in? %>
        <div class="greeting">
            Hello, <%= current_user.email%> <%= link_to 'edit profile', edit_user_registration_path%>
        </div>

        <div class="sign_out">
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm' %>
        </div>
    <% else %>
        <div class="sign_in">
            <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary btn-sm' %>
        </div>

        <div class="sign_up">
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary btn-sm' %>
        </div>
    <% end %>

    <h1 class = "header2">Profile</h1>

    <p class = paragraph>
        <% if user_signed_in? %>
            Email: <%= @user.email %> <br>
            First Name: <%= @user.first_name %><br>
            Last name: <%= @user.last_name %><br>
            Address: <%= @user.address %><br>
            City: <%= @user.city %><br>
            State: <%= @user.state %><br>
            Zip: <%= @user.zip_code %><br>
            Phone: <%= @user.phone_number %> <br>
        <% end %>

    </p>
</body>