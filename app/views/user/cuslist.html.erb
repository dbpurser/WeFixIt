<style>
     .body{
        background-color: grey;
      }

    .header2{
        border-radius: 5px;
        border-color: white;
        background-color: #A67B5B;
        text-align: center;
        color: black;
        margin-bottom: 100px;
        border-style: solid;
        border-width: 2mm;
        padding: 30px 0px;
      }

      .box{
        border: solid;
        border-radius: 5px;
        border-color: white;
        border-width:3mm;
        background-color: #A67B5B;
        margin-left: auto; 
        margin-right: auto;
        padding: 100px;
      }
</style>
<head>
</head>

<body class="body">

<h2 class="header2">All Customers</h2>

<table class=" box table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Customer name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
            <% if not user.is_admin == true %>
                <tr>
                    <td> <%= user.first_name %> <%= user.last_name %></td>
                    <td class="text-nowrap">
                        <%= link_to 'show devices', user_devices_path(user), class: 'btn btn-dark btn-sm' %>
                    </td>
                </tr>
            <% end %>    
        <% end %>
  </tbody>
</table>