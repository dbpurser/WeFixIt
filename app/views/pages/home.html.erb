<!-- the class=" " that I added to the div blocks are names for the blocks. You can use
    the names within the <style>...</style> section to add css to those blocks-->

<style>

.sign_in{
    padding: 10px;
    text-align: center;
}

</style>

<h1 class="my-4">We Fix It!</h1>

    <div class="authentication_block">
        <p>
            
            <% if user_signed_in? %>
                <div class="greeting">

                    Hello, <%= current_user.email%> <%= link_to 'edit profile', edit_user_registration_path%>
                </div>

                <div class="sign_out">
                    <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm' %>
                </div>
            <% else %>
                <div class="sign_in">
                    <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary btn-sm' %>
                </div>

                <div class="sign_up">
                    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary btn-sm' %>
                </div>
            <% end %>
        
        </p>
    </div>